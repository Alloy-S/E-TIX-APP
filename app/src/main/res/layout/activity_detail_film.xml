        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:text="READ SYNOPSIS"
        android:textStyle="bold"/>


    <TextView
        android:paddingLeft="33dp"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:text="Producer:"
        android:textStyle="bold"/>

    <TextView
        android:paddingLeft="33dp"
        android:layout_width="348dp"
