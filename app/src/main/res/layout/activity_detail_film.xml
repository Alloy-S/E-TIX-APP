    <TextView
        android:paddingLeft="33dp"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:text="Director:"
        android:textStyle="bold"/>

    <TextView
        android:paddingLeft="33dp"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:text="Fajar Nugros"/>

    <TextView
        android:paddingLeft="33dp"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:text="Writer:"
        android:textStyle="bold"/>

    <TextView
        android:paddingLeft="33dp"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:text="Fajar Nugros"/>


    <TextView
        android:paddingLeft="33dp"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:text="Cast:"
        android:textStyle="bold"/>

    <TextView
        android:paddingLeft="33dp"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:text="Juan Bio One, Elang EL Gibran, Ibnu Jamil, Dimas
Anggara, Teuku Rifnu Wikana, Erick Estrada,
7olfa Msharani Manen Ma Mimme Alii.fri"/>


</LinearLayout>


















